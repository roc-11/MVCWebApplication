@{
}

<div class="text-center">
    <h2>Member Details</h2>
</div>

<table class="table">
    <tr>
        <td>ID</td>
        <td>@ViewBag.Member.Id</td>
    </tr>
    <tr>
        <td>Name</td>
        <td>@ViewBag.Member.Name</td>
    </tr>
    <tr>
        <td>Email</td>
        <td>@ViewBag.Member.Email</td>
    </tr>
    <tr>
        <td>Active</td>
        <td>@(ViewBag.Member.Active ? "Active" : "Inactive")</td>
    </tr>
</table>

<a href="/Member" class="btn btn-secondary"><i class="fa fa-users"></i> Back to Members</a>